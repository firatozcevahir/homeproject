@page
@model SmartHomeProject.Pages.ConsoleModel
@{
    ViewData["Title"] = "Console";
}

    <h1>
        Console
        <button class="float-right btn-secondary btn" type="button" onclick="clearConsole()">Clear</button>
    </h1>
<div class="row">
    @Html.AntiForgeryToken()
    <div class="container-fluid" id="dvConsole">
    </div>
        <div class="row form-group" style="width:100%">
            <div class="col-11">
                <input maxlength="9" placeholder="start typing your command here..." type="text" name="consoleCommand" id="txtCommand" class="form-control" />
            </div>
            <div class="col-1 p-0">
                <button class="btn-secondary btn" type="button" id="btnCommandText">Send</button>
            </div>
        </div>

</div>
